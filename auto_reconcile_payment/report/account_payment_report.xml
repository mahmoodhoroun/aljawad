<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="account_payment_report" name="account_payment_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page account-payment-page" dir="ltr">
                            <div class="row">
                                <div class="col-12 text-center title">
                                    <h4 dir="rtl"><span t-esc="o.account_payment_report_ar_title()"/></h4>
                                    <h4><span t-esc="o.account_payment_report_en_title()"/></h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"/>
                                <div class="col-6 border-bottom-solid"/>
                                <div class="col-3"/>
                            </div>
                            <div class="row text-center mb-4 mt-2">
                                <div class="col-4 amount-currency">
                                    <div class="row">
                                        <div class="col-4 text-start"><span t-field="o.currency_id" /></div>
                                        <div class="col-8 text-end"><span t-esc="o.amount" /></div>
                                    </div>
                                </div>
                                <div class="col-4 ">
                                    <div><h4 t-field="o.name" /></div>
                                </div>
                                <div class="col-4">
                                    <div class="row">
                                        <div class="col-3 text-start"><strong>Date</strong></div>
                                        <div class="col-6 text-center"><span t-field="o.date" /></div>
                                        <div class="col-3 text-end"><strong>التاريخ</strong></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3 text-start">
                                    <strong>We Reciveed From</strong>
                                </div>
                                <div class="col-6 text-center border-bottom-dashed">
                                    <div><span t-field="o.partner_id" /></div>
                                </div>
                                <div class="col-3 text-end">
                                    <strong>إستلمنا من</strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2 text-start">
                                    <strong>Amount of</strong>
                                </div>
                                <div class="col-8 text-center amount-to-words border-bottom-dashed">
                                    <div><span t-esc="o.amount_to_words()"/> </div>
                                </div>
                                <div class="col-2 text-end">
                                    <strong>مبلغ و قدرة</strong>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-4 text-start">
                                            <strong>Banck Name</strong>
                                        </div>
                                        <div class="col-4 text-center border-bottom-dashed"><span t-field="o.partner_bank_id" /></div>
                                        <div class="col-4 text-end pr-10">
                                            <strong>اسم البنك</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-4 text-start pl-10">
                                            <strong>Cash / Banck</strong>
                                        </div>
                                        <div class="col-4 text-center border-bottom-dashed"><span t-field="o.journal_id" /></div>
                                        <div class="col-4 text-end">
                                            <strong> نقد / بنك</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2 text-start">
                                    <strong>and that for</strong>
                                </div>
                                <div class="col-8 text-center border-bottom-dashed">
                                    <div><span t-field="o.memo" /></div>
                                </div>
                                <div class="col-2 text-end">
                                    <strong>وذلك مقابل</strong>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-3 text-end">
                                    <div>------------------------</div>
                                </div>
                                <div class="col-3 text-end">
                                    <strong>المستلم</strong>
                                </div>
                                <div class="col-3 text-end">
                                    <div>------------------------</div>
                                </div>
                                <div class="col-3 text-end">
                                    <strong>المحاسب</strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="paperformat_for_payment" model="report.paperformat">
            <field name="name">Payment Paper Format</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">35</field>
            <field name="header_spacing">30</field>
            <field name="margin_bottom">170</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="dpi">90</field>
        </record>

        <record id="account_payment_action" model="ir.actions.report">
			<field name="name">Payment</field>
			<field name="model">account.payment</field>
			<field name="report_type">qweb-html</field>
			<field name="report_name">auto_reconcile_payment.account_payment_report</field>
			<field name="report_file">auto_reconcile_payment.account_payment_report</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
        	<field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_for_payment"/>
		</record>
    </data>
</odoo>