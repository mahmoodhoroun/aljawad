<odoo>
    <data>
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='products']/group[1]" position="replace">
                    <group colspan="2">
                        <group name="discount">
                            <field name="po_order_discount" invisible="1"/>
                            <field name="discount_type" invisible="not po_order_discount"/>
                            <field name="discount_rate" invisible="not po_order_discount"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right" colspan="2">
                            <field name="amount_untaxed"/>
                            <field name="amount_discount" invisible="not po_order_discount"/>
                            <field name="amount_tax"/>
                            <field name="amount_total"/>
                        </group>
                    </group>
                </xpath>
                
                <!-- Add amount fields in the total section -->
                <!-- <field name="amount_untaxed" position="replace">
                    <field name="amount_untaxed"/>
                    <field name="amount_discount" invisible="not po_order_discount"/>
                </field>
                
                <field name="amount_tax" position="replace">
                    <field name="amount_tax"/>
                </field>
                
                <field name="amount_total" position="replace">
                    <field name="amount_total"/>
                </field> -->
            </field>
        </record>
    </data>
</odoo>