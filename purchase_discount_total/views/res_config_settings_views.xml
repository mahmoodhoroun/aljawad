<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_purchase_order_discount" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.order.discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='purchase_setting_container']" position="inside">
                <setting id="po_order_discount" 
                         string="Purchase Order Discount" 
                         help="Enable purchase order discount">
                    <field name="po_order_discount"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
