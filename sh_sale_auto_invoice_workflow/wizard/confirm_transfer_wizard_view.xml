<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_confirm_transfer_wizard_form" model="ir.ui.view">
        <field name="name">confirm.transfer.wizard.form</field>
        <field name="model">confirm.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Transfer">
                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="sale_order_amount" readonly="1"/>
                </group>
                <group>
                    <field name="company_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <!-- <field name="payment_journal"/> -->
                    <!-- <field name="payment_ids" readonly="0"/> -->
                    <field name="payment_ids">
                        <list editable="bottom" create="1">
                            <field name="payment_journal"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>