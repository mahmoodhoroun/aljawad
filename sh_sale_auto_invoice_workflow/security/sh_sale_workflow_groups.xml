<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_sale_workflow" model="ir.module.category">
        <field name="name">Sale Workflow</field>
        <field name="description">Manage sale workflow configuration</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_auto_sale_workflow" model="res.groups">
        <field name="name">Auto sale workflow</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>

    <record id="group_show_sale_workflow_menu" model="res.groups">
        <field name="name">Show Sales Workflow Menu</field>
        <field name="category_id" ref="module_category_sale_workflow"/>
    </record>

    <!-- Multi - Company Rules -->
    <record id="auto_sale_workflow_comp_rule" model="ir.rule">
        <field name="name">Auto Sale Workflow multi-company</field>
        <field name="model_id" ref="model_sh_auto_sale_workflow" />
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in',
            company_ids)]</field>
    </record>

</odoo>