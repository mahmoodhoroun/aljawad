<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_custom_invoice2" model="report.paperformat">
        <field name="name">Custom Invoice Format2</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <!-- <field name="page_height">275</field> -->
        <!-- <field name="page_width">242</field> -->
        <field name="orientation">Portrait</field>
        <field name="margin_top">55</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_spacing">50</field>
        <field name="dpi">90</field>
        <field name="header_line" eval="False"/>
    </record>

    <!-- Custom Invoice Report -->
    <record id="action_report_custom_invoice" model="ir.actions.report">
        <field name="name">Invoice Report</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_invoice.report_custom_invoice</field>
        <field name="report_file">custom_invoice.report_custom_invoice</field>
        <field name="print_report_name">'Invoice - %s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_custom_invoice2"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>


    <record id="action_report_custom_sales" model="ir.actions.report">
        <field name="name">Sales Order Report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_invoice.report_custom_sales</field>
        <field name="report_file">custom_invoice.report_custom_sales</field>
        <field name="print_report_name">'Sales - %s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_custom_invoice2"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

        <record id="paperformat_custom_payment" model="report.paperformat">
        <field name="name">Custom Invoice Format2</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <!-- <field name="page_height">275</field> -->
        <!-- <field name="page_width">242</field> -->
        <field name="orientation">Portrait</field>
        <field name="margin_top">52</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_spacing">45</field>
        <field name="dpi">90</field>
        <field name="header_line" eval="False"/>
    </record>
    
    <!-- Custom Payment Report -->
    <record id="action_report_custom_payment" model="ir.actions.report">
        <field name="name">Custom Payment</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_invoice.report_custom_payment</field>
        <field name="report_file">custom_invoice.report_custom_payment</field>
        <field name="print_report_name">"Payment - %s" % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_custom_payment"/>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_type">report</field>
    </record>


</odoo>
