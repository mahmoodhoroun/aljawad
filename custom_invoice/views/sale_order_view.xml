<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_custom_invoice" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.custom.invoice</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_preview_sale_order']" position="before">
                <button name="%(custom_invoice.action_report_custom_sales)d" string="print" type="action" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
