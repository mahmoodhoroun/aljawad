<odoo>
    <template id="report_custom_payment">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <t t-set="company" t-value="o.company_id"/>
                <div class="page">
                    <div class="header">
                        <div class="logo" style="text-align: center;">
                            <img t-att-src="image_data_uri(company.logo)" style="max-height: 120px; width: 250px; "/>
                        </div>
                    
                    </div>
                    <div class="content">
                        <div>
                            <div style="float: left;">
                                <div style=" border: 1px solid #000; padding: 5px;"><span t-esc="company.english_company_name"/></div>
                            </div>
                            <div style="float: right;"> 
                                <div style=" border: 1px solid #000; padding: 5px;"><span t-esc="company.name"/></div>
                            </div>
                            <div style="clear: both;"></div>
                            </div>
                        </div>

                        <div style="text-align: center; margin-top: 15px;">
                            <div style="width: 270px; margin: auto; ">
                                <h5 t-if="o.payment_type == 'inbound'" style="border: 1px solid #000; padding: 5px;">Receipt Voucher-سند قبض</h5>
                                <h5 t-if="o.payment_type == 'outbound'" style="border: 1px solid #000; padding: 5px;">Payment Voucher-سند صرف</h5>
                            </div>
                        </div>

                        <div style="margin-top: 15px;">
                            <div style="float: right; width: 80px; direction: rtl;">
                                <span>السنة:</span>
                            </div>
                            <div style="float: right; border: 1px solid #000; width: 70px; height: 35px; margin-right: 15px; padding: 5px; text-align: center;">
                                <span t-esc="o.date.year"/>
                            </div>
                            <div style="clear: both;"></div>
                        </div>
                        <div style="margin-top: 15px;">
                            <div style="float: right; width: 80px; direction: rtl;">
                                <span style="direction: rtl;">رقم السند</span>
                            </div>
                            <div style="float: right; border: 1px solid #000; width: 160px; height: 35px; margin-right: 15px; padding: 5px; text-align: center;">
                                <span t-esc="o.name"/>
                            </div>
                            <div style="float: right; width: 80px; margin-right: 30px;">
                                <span style="direction: rtl;">التاريخ</span>
                            </div>
                            <div style="float: right; border: 1px solid #000; width: 160px; height: 35px; margin-right: 15px; padding: 5px; text-align: center;">
                                <span t-esc="o.date"/>
                            </div>
                            <div style="clear: both;"></div>
                        </div>
                        <div style="margin-top: 20px;">
                            <div style="float: right; width: 80px; direction: rtl;">
                                <span>رقم الحساب</span>
                            </div>
                            <div style="float: right; border: 1px solid #000; width: 100px; height: 35px; margin-right: 15px; padding: 5px; text-align: center;">
                                <span t-esc="o.partner_id.id"/>
                            </div>
                            <div style="clear: both;"></div>
                        </div>
                        <div style="margin-top: 20px;">
                            <div style="float: right; width: 80px; direction: rtl;">
                                <span>اسم الحساب</span>
                            </div>
                            <div style="float: right; border: 1px solid #000; width: 300px; height: 35px; margin-right: 15px; padding: 5px; text-align: center;">
                                <span t-esc="o.partner_id.name"/>
                            </div>
                            <div style="clear: both;"></div>
                        </div>

                        <div style="margin-top: 30px;">
                            <div style="float: right; width: 80px; direction: rtl;">
                                <span>المبلغ</span>
                            </div>
                            <div style="float: right; border: 1px solid #000; width: 100px; height: 35px; margin-right: 15px; padding: 5px; text-align: center;">
                                <span t-esc="o.amount"/>
                            </div>
                            <div style="float: right; width: 80px; direction: rtl; margin-right: 30px;">
                                <span>نوع السداد</span>
                            </div>
                            <div style="float: right; border: 1px solid #000; width: 100px; height: 35px; margin-right: 15px; padding: 5px; text-align: center;">
                                <span  t-esc="o.journal_id.name"/>
                            </div>
                            
                            <div style="clear: both;"></div>
                        </div>
                        <!-- <div style="margin-top: 20px;">
                            <div style="float: right; width: 80px; direction: rtl;">
                                <span>الضريبة</span>
                            </div>
                            <div style="float: right; border: 1px solid #000; width: 100px; height: 35px; margin-right: 15px; padding: 5px; text-align: center;">
                                <span />
                            </div>
                            
                            <div style="clear: both;"></div>
                        </div> -->
                        <div style="margin-top: 20px;">
                            <div style="border: 1px solid #000; width: 500px; height: 35px; padding: 5px; text-align: right; float: right; direction: rtl;">
                                <span t-if="o.currency_id" t-esc="o.currency_id.with_context(lang='ar_001').amount_to_text(o.amount)"/>
                            </div>
                            <div style="clear: both;"></div>
                        </div>
                        <div style="margin-top: 30px; text-align: right;" id="memo">
                           <div sytle="font-weight: bold; text-align: right;"> <span>البيان</span></div>
                           <!-- <div style="clear: both;"></div> -->
                           <!-- <br/> -->
                           <div style="float: right; width: 500px; direction: rtl; border: 1px solid #000; height: 35px;  padding: 5px; text-align: right;"> 
                                <span t-esc="o.memo"/>
                           </div>
                           <div style="float: right; width: 500px; direction: rtl; border: 1px solid #000; height: 35px;  padding: 5px; text-align: right; margin-top: 2px;"> 
                               
                           </div>
                           <div style="clear: both;"></div>
                        </div>



                        <div style="margin-top:60px; direction:rtl;">
                            <table style="margin:0 auto; border-collapse:separate; border-spacing:60px 0;">
                                <tr>
                                <td style="width:150px; border:1px solid #000; padding:5px; text-align:center;">أمين الصندوق</td>
                                <td style="width:150px; border:1px solid #000; padding:5px; text-align:center;">توقيع المستلم</td>
                                <td style="width:150px; border:1px solid #000; padding:5px; text-align:center;">المدير</td>
                                </tr>
                            </table>
                        </div>



                    
                </div>
                
            </t>
            
        </t>


    </template>
</odoo>
