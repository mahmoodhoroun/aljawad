<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="web.Dialog" t-inherit-mode="extension">
        <xpath expr="//t[@t-slot='header']" position="after">
            <div t-if="!isFullscreen" class="ms-auto z-buttons">
                <button class="btn btn-sm lh-1 align-text-top" data-tooltip="Dismiss" data-hotkey="m" tabindex="-1" t-on-click="dismiss">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-minus">
                        <path d="M5 12h14"/>
                    </svg>
                </button>
                <button class="btn btn-sm lh-1 align-text-top" data-tooltip="Expand" data-hotkey="m" tabindex="-1" t-on-click="switch_dialog_size">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-git-compare">
                        <circle cx="18" cy="18" r="3"/>
                        <circle cx="6" cy="6" r="3"/>
                        <path d="M13 6h3a2 2 0 0 1 2 2v7"/>
                        <path d="M11 18H8a2 2 0 0 1-2-2V9"/>
                    </svg>
                </button>
                <button class="btn btn-sm lh-1 align-text-top" data-tooltip="Maximize" tabindex="-1" t-on-click="toggle_dialog_size">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-square-slash">
                        <rect width="18" height="18" x="3" y="3" rx="2"/>
                        <line x1="9" x2="15" y1="15" y2="9"/>
                    </svg>
                </button>
            </div>
        </xpath>
    </t>
    <t t-inherit="web.Dialog.header" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('btn-close')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
    </t>
</templates>