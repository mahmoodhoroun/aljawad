<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_form_inherit_om" model="ir.ui.view">
        <field name="name">res.company.form.inherit.om</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group string="Menu Preset">
                    <field name="menus_preset" options="{'no_create': True}" widget="many2many_tags" placeholder="Choose options..."/>
                    <group string="Sidenav Logo">
                        <field name="logo_dui" string="Light Mode" widget="image" options="{'size': [250, 0]}"/>
                        <field name="logo_lui" string="Dark Mode" widget="image" options="{'size': [250, 0]}"/>
                    </group>
                    <group string="Home Background">
                        <field name="bg_dui" string="Light Mode" widget="image" options="{'size': [400, 0]}"/>
                        <field name="bg_lui" string="Dark Mode" widget="image" options="{'size': [400, 0]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
