<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Account Payment Form for Customer Payments (Inbound) -->
    <record id="view_account_payment_form_inherit_customer_domain" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.customer.domain</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group1']/field[@name='partner_id'][1]" position="attributes">
                <attribute name="domain">[('customer_rank', '&gt;', 0), ('parent_id', '=', False)]</attribute>
            </xpath>
            <xpath expr="//group[@name='group1']/field[@name='partner_id'][2]" position="attributes">
                <attribute name="domain">[('supplier_rank', '&gt;', 0), ('parent_id', '=', False)]</attribute>
            </xpath>
        </field>
    </record>
    
</odoo>
