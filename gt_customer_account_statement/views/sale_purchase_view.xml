<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Sale Order Form -->
    <record id="view_order_form_inherit_partner_domain" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.partner.domain</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('customer', '=', True), ('parent_id', '=', False)]</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit Purchase Order Form -->
    <record id="purchase_order_form_inherit_partner_domain" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.partner.domain</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('supplier', '=', True), ('parent_id', '=', False)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
