<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="sh_auto_purchase_workflow_view_form" model="ir.ui.view">
        <field name="name">sh.auto.purchase.workflow.view.form</field>
        <field name="model">sh.auto.purchase.workflow</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" default_focus="1" placeholder="Name" />
                        </h1>
                    </div>
                    <group>
                       <group string = "Workflow Option">
                            <field name = "validate_order"/>
                            <field name = "create_bill" />
                            <field name = "validate_bill" invisible="create_bill == False"/>
                            <field name = "register_payment" invisible="create_bill == False or validate_bill == False"/>
                            <field name = "allow_multiple_payment" invisible="create_bill == False or validate_bill == False"/>
                       </group>
                        <group>
                            <field name = "purchase_journal" invisible="create_bill == False" required="create_bill == True" domain="[('type','=','purchase')]"  options="{'no_create': True, 'no_create_edit':True}" />
                            <field name = "payment_journal" invisible="create_bill == False or validate_bill == False or register_payment ==  False" required="create_bill == True and validate_bill == True and register_payment == True" domain="[('type', 'in', ('bank', 'cash'))]"  options="{'no_create': True, 'no_create_edit':True}" />
                            <field name = "payment_method" invisible="create_bill == False or validate_bill == False or register_payment == False" required="create_bill == True and validate_bill == True and register_payment == True" domain="[('payment_type', '=', 'outbound')]"   />
                        </group>
                    </group>
                    <notebook>
                        <page string="Authorized Users" name="authorized_users">
                            <field name="user_ids" widget="many2many_tags"/>
                            <div class="text-muted">
                                Leave empty to allow all users to use this workflow. Add specific users to restrict access.
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="sh_auto_purchase_workflow_view_tree" model="ir.ui.view">
        <field name="name">sh.auto.purchase.workflow.view.list</field>
        <field name="model">sh.auto.purchase.workflow</field>
        <field name="arch" type="xml">
            <list>
                <field name = "name" optional = "show"/>
                <field name = "validate_order" optional = "show" widget = "boolean_toggle"/>
                <field name = "create_bill" optional = "show" widget = "boolean_toggle"/>
                <field name = "validate_bill" optional = "show" widget = "boolean_toggle" />
                <field name = "register_payment" optional = "show"  widget = "boolean_toggle"/>
                <field name = "purchase_journal" optional = "show" />
                <field name = "payment_journal" optional = "show" />
                <field name = "payment_method" optional = "show"/>
            </list>
        </field>
    </record>

    <record id="sh_auto_purchase_workflow_action" model="ir.actions.act_window">
        <field name="name">Auto Purchase Workflow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.auto.purchase.workflow</field>
        <field name="view_mode">list,form</field>
    </record>

    
    <menuitem   id="sh_auto_purchase_workflow_menu" 
                name="Auto Purchase Workflow" 
                parent="purchase.menu_purchase_config" 
                action="sh_auto_purchase_workflow_action" 
                sequence="99" 
                groups="sh_purchase_auto_bill_workflow.group_show_purchase_workflow_menu"/>
</odoo>