<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_lowest_selling_price" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.lowest.selling.price</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='quotation_order_setting_container']" position="inside">
                <setting id="lowest_selling_price" 
                         string="Lowest Selling Price" 
                         help="Enable lowest selling price">
                    <field name="lowest_selling_price"/>
                </setting>
                <setting id="lowest_selling_price_pricelist_id" 
                        string="Lowest Selling Price Pricelist" 
                        help="Set a pricelist for lowest selling price"
                        invisible="lowest_selling_price == False">
                    <field name="lowest_selling_price_pricelist_id"/>
                    <div class="text-muted">
                        This pricelist will be automatically selected when creating new sales orders
                    </div>
                </setting>
                <setting id="allow_sell_bellow_cost" 
                         string="Allow Sell bellow Cost" 
                         help="Allow users to sell products bellow cost price">
                    <field name="allow_sell_bellow_cost"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
