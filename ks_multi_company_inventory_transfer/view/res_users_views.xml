<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit_warehouse_access_for_internal_tranfer" model="ir.ui.view">
        <field name="name">res.users.form.inherit.warehouse.access</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Company Access" groups="custom_features.group_view_stock_details">
                    <group>
                        <field name="transfer_allowed_company_ids" widget="many2many_tags"/>
                    </group>
                    <div class="text-muted">
                        If no companies are selected, the user will be able to see all companies in the stock details.
                    </div>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
