<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="commission_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Commission Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='invoicing_settings']" position="after">
                <div class="app_settings_block" data-string="Commission Accounts">
                    <h2>Commission Accounts</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="commission_account_id" />

                                <field name="commission_account_id"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="commission_payable_account_id" />
                                <field name="commission_payable_account_id"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="commission_journal_id" />
                                <field name="commission_journal_id"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="auto_confirm" /><span>   </span>
                                <field name="auto_confirm" help="When you check this field, the commission will be automatically confirmed when created"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>