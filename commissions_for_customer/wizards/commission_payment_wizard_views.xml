<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_commission_payment_wizard_form" model="ir.ui.view">
        <field name="name">commission.payment.wizard.form</field>
        <field name="model">commission.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Register Payment">
                <sheet>
                    <group>
                        <group>
                            <field name="payment_date"/>
                            <field name="amount"/>
                            <field name="journal_id"/>
                            <field name="communication" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <field name="commission_ids" invisible="1"/>
                </sheet>
                <footer>
                    <button string="Create Payment" name="action_create_payments" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_commission_payment_wizard" model="ir.actions.act_window">
        <field name="name">Register Payment</field>
        <field name="res_model">commission.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_sales_commission"/>
    </record>
</odoo>
