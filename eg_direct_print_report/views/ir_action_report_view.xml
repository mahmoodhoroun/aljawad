<odoo>
    <record id="ir_actions_report_form_for_direct_print_report" model="ir.ui.view">
        <field name="name">ir.actions.report.form.for.direct.print.report</field>
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="base.act_report_xml_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='print_report_name']" position="after">
               <field name="is_print_preview"/>
            </xpath>
        </field>
    </record>
</odoo>