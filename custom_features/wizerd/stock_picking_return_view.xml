<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the stock return picking form view to add our exchange products -->
    <record id="view_stock_return_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.return.picking.form.inherit</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add the exchange products field after product_return_moves -->
            <field name="product_return_moves" position="after">
                <separator string="Exchange Products" invisible="product_return_moves == []"/>
                <field name="exchange_product_lines" invisible="product_return_moves == []">
                    <list editable="bottom" create="1">
                        <field name="product_id" required="1"/>
                        <field name="quantity"/>
                        <field name="uom_id" groups="uom.group_uom"/>
                    </list>
                </field>
            </field>
        </field>
    </record>
</odoo>
