<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add button to invoice tree view header -->
    <record id="view_invoice_tree_with_reverse_button" model="ir.ui.view">
        <field name="name">account.move.tree.reverse.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="multi_edit">1</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="button_create_reverse_entry" string="Create Reverse Entries" type="object" 
                        groups="account.group_account_invoice"/>
                <button name="button_rest_draft" string="Rest to Draft" type="object"/>
            </xpath>
        </field>
    </record>
    
    <!-- Add button to vendor invoice tree view header -->
    <record id="view_vendor_invoice_tree_with_reverse_button" model="ir.ui.view">
        <field name="name">account.move.vendor.tree.reverse.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="multi_edit">1</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="button_create_reverse_entry" string="Create Reverse Entries" type="object" 
                        groups="account.group_account_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>
