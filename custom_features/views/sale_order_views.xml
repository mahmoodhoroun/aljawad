<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_custom_features" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.custom.features</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='price_unit']" position="after">
                <field name="price_after_tax" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                <field name="price_after_tax" force_save="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom_qty']" position="after">
                <field name="categ_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list//field[@name='product_uom_qty']" position="after">
                <field name="categ_id"/>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom_qty']" position="after">
                <button name="action_view_stock_details" type="object" string="" 
                        class="btn-link" icon="fa-archive" groups="custom_features.group_view_stock_details">
                    <field name="stock_display" readonly="1" nolabel="1"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='order_line']/list//field[@name='product_uom_qty']" position="after">
                <button name="action_view_stock_details" type="object" string="" 
                        class="btn-link" icon="fa-archive" groups="custom_features.group_view_stock_details">
                    <field name="stock_display" readonly="1" nolabel="1"/>
                </button>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="phone_number_sale_order" widget="phone"/>
                <field name="purchase_order"/>
                <field name="plate_number"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="specialist"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="action_report_custom_invoice" 
                        string="Print Invoice" 
                        type="object" 
                        class="btn-primary" 
                        groups="base.group_user"
                        invisible="state not in ['sale', 'done'] or invoice_count == 0"/>
            </xpath>



        </field>
    </record>
    <record id="view_order_search_inherit_custom_features" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.custom.features</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="after">
                <field name="phone_number_sale_order" string="Phone Number"/>
                <field name="plate_number"/>
                <field name="invoice_ids" string="Invoice Number" filter_domain="[('invoice_ids.name', 'ilike', self)]"/>
            </xpath>
            
        </field>
    </record>

