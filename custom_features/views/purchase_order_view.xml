<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_custom_features" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.custom.features</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='price_unit']" position="after">
                <field name="product_price"/>
                <field name="profit"/>
                <field name="profit_rate"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                <field name="product_price"/>
                <field name="profit"/>
                <field name="profit_rate"/>
            </xpath>
        </field>
    </record>

</odoo>
