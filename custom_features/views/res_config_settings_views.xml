<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_sale" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='quotation_order_setting_container']" position="inside">
                <setting id="default_customer_setting" 
                         string="Default Customer" 
                         help="Set a default customer for new sales orders">
                    <field name="default_partner_id"/>
                    <div class="text-muted">
                        This customer will be automatically selected when creating new sales orders
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
