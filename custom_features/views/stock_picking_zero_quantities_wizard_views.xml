<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_zero_quantities_wizard_form" model="ir.ui.view">
        <field name="name">stock.picking.zero.quantities.wizard.form</field>
        <field name="model">stock.picking.zero.quantities.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Zero Quantities">
                <div class="alert alert-warning" role="alert">
                    <strong>Warning!</strong><br/>
                    This action will set all product quantities to zero in the stock picking.<br/>
                    Number of lines to be zeroed: <field name="line_count" readonly="1" class="oe_inline"/>
                </div>
                
                <group>
                    <field name="picking_id" invisible="1"/>
                </group>
                
                <footer>
                    <button name="action_confirm_zero_quantities" 
                            string="Confirm Zero" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_cancel" 
                            string="Cancel" 
                            type="object" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
