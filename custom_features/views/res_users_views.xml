<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit_warehouse_access" model="ir.ui.view">
        <field name="name">res.users.form.inherit.warehouse.access</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Warehouse Access" groups="custom_features.group_view_stock_details">
                    <group>
                        <field name="allowed_warehouse_ids" widget="many2many_tags"/>
                    </group>
                    <div class="text-muted">
                        If no warehouses are selected, the user will be able to see all warehouses in the stock details.
                    </div>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
