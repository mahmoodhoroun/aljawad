<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='operations']/field[@name='move_ids_without_package']/list/field[@name='product_id']" position="after">

                <field name="product_category"/>
                <field name="product_qty_available"/>
                <field name="cost_price" groups="lowest_selling_price.group_show_cost"/>
            </xpath>
            
            <!-- Add Zero Quantities button for stock pickings -->
            <xpath expr="//header" position="inside">
                <button name="action_zero_quantities" 
                        string="Zero Quantities" 
                        type="object" 
                        class="btn-secondary" 
                        invisible="state in ['done', 'cancel']"/>
            </xpath>
        </field>
    </record>
</odoo>
